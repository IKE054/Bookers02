

<div class="col-xs-3">
	<h2>User info</h2>
	<table class="table">
		<tbody>
			<tr></tr> 
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>

	<div class="row">
		<%= link_to '', edit_user_path(user), :class => 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{id}' %>
	</div>

	<h2>New book</h2>
	<div class="new_book">
		<%= form_for [user, book] do |f| %>
		<div class="field row">
			<%= f.label :Title %>
			<%= f.text_field :title, class:"col-xs-12 book_title" %>
		</div>

		<div class="field row">
			<%= f.label :Opinion %>
			<%= f.text_area :opinion, class:"col-xs-12 book_opinion" %>
		</div>

		<div class="actions row">
			<%= f.submit 'Create Book', :class => "btn btn-primary col-xs-12" %>
		</div>

		<% end %>
	</div>
</div>
