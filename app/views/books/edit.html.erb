<div class="body">
  <div class="container">
   <div class="row">
     <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>

    <div class="error_explanation">
      <% if @book.errors.any? %>
      <ul>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
  

      <%= form_for(@book) do |f| %>

  <div class=" field row">
    <%= f.label :Title %><br>
    <%= f.text_field :title, class: "col-xs-12 book_title" %>
  </div>

  <div class="field row">
    <%= f.label :Opinion %><br>
    <%= f.text_area :opinion, class: "col-xs-12 book_body" %>
  </div>


  <div class="actions">
    <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
  </div>
  <% end %>
  <%= link_to 'Show', book_path(@book.id), class: "book_#{@book.id}" %> |
  <%= link_to 'Back', books_path, class: "back" %>
</div>
</div>