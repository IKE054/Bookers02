	<div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <% books.each do |book| %>
      <% users.each do |users| %>
      <tbody>
        <tr>
          <% if users.id == book.user_id %>
          <td><%= link_to user_path(users.id), class: "user_#{users.id}" do %>
            <%= attachment_image_tag users, :image, :fill, 60, 60, fallback: "no_image.jpg", class: "profile-thumb" %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id), class: "book_#{book.id}" do %>
            <%= book.title %>
            <% end %></td>
            <td><%= book.opinion %></td>
            <% end %>
          </tr>
        </tbody>
        <% end %>
        <% end %>
      </table>
    </div>