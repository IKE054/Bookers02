<div class="body">
      <div class="container">
    <%= render 'users/user_new', user: @user, book: @book %>
  <div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
		  <tbody><tr>
        <td>
          <%= link_to user_path(@user.id), class: "user_#{@user.id}" do %>
          <%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpg", class: "profile-thumb", size: "100x100" %><br>
          <%= @user.name %>
          <% end %>
        </td>

        <td>
          <%= link_to book_path(@detail.id), class: "book_#{@detail.id}" do %>
          <%= @detail.title %>
          <% end %></td>

          <td>
          <%= @detail.opinion %>
          </td>
            <% if @user.id == current_user.id %>
          <td> <%= link_to edit_book_path(@detail.id), class: "edit_book_#{@detail.id}" do %>
            <p class="btn-sm btn-success">Edit</p>
            <% end %>
          </td>

          <td><%= link_to 'Destroy', book_path(@detail.id), class:"btn-sm btn-danger destroy_book_#{@detail.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    </tbody></table>

  </div>
</div>
      </div>
    </div>